 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
     
        <div class="form-group">
            <label for="name" class="text-light">Nom et prenom</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="cin" class="text-light">cin</label>
            <input type="text" name="cin" value="" placeholder="*******">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
       <div class="form-group">
            <label for="telephone" class="text-light">Telephone</label>
            <input type="text" name="telephone" value="" placeholder="+216********">
        </div> 
        <div class="form-group">
            <label for="password"  class="text-light">Password (8 characters minimum)</label>
            <input type="password" name="password" placeholder="**********" minlength="8" required>
        </div>
        <div class="text-light"  >
            <label for="role" class="text-light">Role: </label>
            <select  type="liste" name="role" >
                <option value="">--Veuillez choisir un role --</option>
                <option value="ئيس دائرة">رئيس دائرة</option>
                <option value="قاضي">قاضي</option>
            </select>
       
    
            <label for="region" class="text-light">Région : </label>
            <select  type="liste" name="region">
                <option value="">--Veuillez choisir une region--</option>
                <option value="Bekalta">Bekalta</option>
                <option value="Bembla">Bembla</option>
                <option value="Beni Hassen">Beni Hassen </option>
                <option value="Jemmal">Jemmal </option>
                <option value="Ksar Hellal">Ksar Hellal</option>
                <option value="Ksibet el-Médiouni">Ksibet el-Médiouni</option>
                <option value="Moknine">Moknine </option>
                <option value="Monastir">Monastir</option>
                <option value="Ouerdanine">Ouerdanine</option>
                <option value="Sahline">Sahline</option>
                <option value="Sayada-Lamta-Bou Hajar">Sayada-Lamta-Bou Hajar </option>
                <option value="Téboulba">Téboulba</option>
                <option value="Zéramdine">Zéramdine</option>
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Enregistrer</button>
        </div>

    </div>
</form>