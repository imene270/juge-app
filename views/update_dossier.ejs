                <input type="text" id="start" name="date_negotiation" value="<%= dossier.date_negotiation %>" placeholder ="2021-07-22" >
                <label for="jugement" class="text-light">Jugement: </label>
                <textarea  type="text" rows="5" cols="33" id="jugement"  value="<%= dossier.jugement %>" name ="jugement"> ... </textarea><br/><br/>
                <label for="nom_juge" class="text-light">Juge : </label>
                <input type="text" name="nom_juge"  value="<%= dossier.nom_juge %>" placeholder="Foulen ben foulen">
                <label for="date_r" class="text-light">Date réception : </label>
                <input type="text" id="date_r"  value="<%= dossier.date_r%>" name="date_reception"placeholder="2021-07-22" >
                <label for="date_l" class="text-light">Date Livraison : </label>
                <input type="text" id="date_l"  value="<%= dossier.date_l %>"name="date_livraison"placeholder="2021-07-22" >
            </div>

            <div  class="form-group" id="dvPassport" style="display: none">
                <label for="nom_etat" class="text-light">Etat :</label>
                <div class="radio inline">
                    <input type="radio" id="chkYesM" name="chkPassPortn"  value="<%= dossier.nom_etat %>" checked onclick="ShowHideDiv()"  >
                    <label for="chkYesM" class="radio-label ">توجه</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="chkNoM" name="chkPassPortn"  value="<%= dossier.nom_etat %>"  onclick="ShowHideDiv()"  >
                    <label for="chkNoM" class="radio-label ">تحرير</label>
                </div> 

                <div  class="form-group" id="dvPassportM" style="display: none">
                 <label for="datet" class="text-light">Date : </label>
                    <input type="text" id="datet" name="datet" value="<%= dossier.datet %>"  placeholder="2021-07-22" >
                    <label for="maps_code" class="text-light">Lieu : </label>
                    <input type="text" id="start" name="maps_code" value="<%= dossier.maps_code%>"  placeholder="2021-07-22" >
                    <label for="nom_juge" class="text-light">Juge : </label>
                    <input type="text" name="nom_juge" value="<%= dossier.nom_juge %>"  placeholder="Foulen ben foulen">
                  
                </div>
                <div  class="form-group" id="dvPassportNM" style="display: none">
