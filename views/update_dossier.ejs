         <form method="POST" id="update_dossier">
            <div class="new_dossier">
                <div class="form-group">
                    <label for="ref" class="text-light">Reference : </label>
                    <input type="hidden" name="id" value="<%= dossier._id %>">
                    <input type="text" name="ref" value="<%= dossier.ref %>" placeholder="A1250e">
                </div>
                <div class="form-group">
                    <label for="dateAudiance" class="text-light">Date de Audiance  : </label>
                    <input type="text" name="dateAudiance" value="<%= dossier.dateAudiance %>" placeholder="12-02-2020">
                </div>
            <div class="form-group">
            <label for="complete" class="text-light">Manques :</label>
            <div class="radio inline">
                <input type="radio" id="chkYes" name="chkPassPort"  value="<%= dossier.chkYes %>" checked onclick="ShowHideDiv()"  >
                <label for="chkYes" class="radio-label ">Oui</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="chkNo" name="chkPassPort"  value="<%= dossier.chkNo %>" onclick="ShowHideDiv()"  >
                <label for="chkNo" class="radio-label ">Non</label>
            </div>
            <div  class="form-group" id="dvPassportN" style="display: none">
